<textarea name ="description" value="<%book.description%>" placeholder="description of the book"></textarea>
<input type ="text" name="author" value="<%book.author%>" placeholder ="book author">
<input type ="text" name="ISBN" value="<%book.ISBN>" placeholder ="book ISBN">

<input type ="image" name="" value="<%image_url%>" placeholder ="book image">
<button type="submit">update Detail</button>
</form>